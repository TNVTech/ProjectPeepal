<%- contentFor('body') %>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Info boxes -->
        <div class="row">
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box">
                    <span class="info-box-icon bg-info elevation-1"><i class="fas fa-users"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Total Users</span>
                        <span class="info-box-number"><%= typeof stats !== 'undefined' ? stats.totalUsers : 0 %></span>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box">
                    <span class="info-box-icon bg-success elevation-1"><i class="fas fa-user-check"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Active Users</span>
                        <span class="info-box-number"><%= typeof stats !== 'undefined' ? stats.activeUsers : 0 %></span>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-3">
                <a href="/approvals" class="text-decoration-none">
                    <div class="info-box">
                        <span class="info-box-icon bg-warning elevation-1"><i class="fas fa-clock"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">Pending Requests</span>
                            <span class="info-box-number"><%= typeof stats !== 'undefined' ? stats.pendingRequests : 0 %></span>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box">
                    <span class="info-box-icon bg-danger elevation-1"><i class="fas fa-user-times"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Revoked Access</span>
                        <span class="info-box-number"><%= typeof stats !== 'undefined' ? stats.revokedAccess : 0 %></span>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">
            <section class="col-lg-7 connectedSortable">
                <!-- Welcome Card -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-home mr-1"></i>
                            Welcome
                        </h3>
                    </div>
                    <div class="card-body">
                        <h5>Hello, <%= activeUser && activeUser.displayName ? activeUser.displayName : 'User' %>!</h5>
                        <p>Welcome to your dashboard. Here you can manage your account and view important information.</p>
                    </div>
                </div>
            </section>

            <section class="col-lg-5 connectedSortable">
                <!-- User Info Card -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-user mr-1"></i>
                            User Information
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="user-info">
                            <p><strong>Name:</strong> <%= activeUser && activeUser.displayName ? activeUser.displayName : 'N/A' %></p>
                            <p><strong>Email:</strong> <%= activeUser && activeUser.email ? activeUser.email : 'N/A' %></p>
                            <p><strong>Company:</strong> <%= activeUser && activeUser.company_name ? activeUser.company_name : 'N/A' %></p>
                            <p><strong>Role:</strong> <%= activeUser && activeUser.role ? activeUser.role : 'N/A' %></p>
                            <p><strong>Last Login:</strong> <%= activeUser && activeUser.lastLogin ? activeUser.lastLogin : 'N/A' %></p>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section> 