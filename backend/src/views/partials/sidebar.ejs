<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="/dashboard" class="brand-link">
        <img src="https://adminlte.io/themes/v3/dist/img/AdminLTELogo.png" alt="Company Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light"><%= activeUser && activeUser.company_name ? activeUser.company_name : 'AdminLTE 3' %></span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="https://adminlte.io/themes/v3/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block"><%= activeUser && activeUser.displayName ? activeUser.displayName : 'User' %></a>
                <small class="text-muted"><%= activeUser && activeUser.role ? activeUser.role : 'Guest' %></small>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class with font-awesome or any other icon font library -->
                <li class="nav-item">
                    <a href="/dashboard" class="nav-link <%= path === '/dashboard' ? 'active' : '' %>">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                
                <!-- Request Management Group -->
                <li class="nav-item has-treeview">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-clipboard-list"></i>
                        <p>
                            Request Management
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <% if (activeUser && (activeUser.role === 'System Administrator' || (typeof userPrivileges !== 'undefined' && userPrivileges.includes('list_requests')))) { %>
                        <li class="nav-item">
                            <a href="/approvals" class="nav-link <%= path === '/approvals' ? 'active' : '' %>">
                                <i class="nav-icon fas fa-clipboard-check"></i>
                                <p>
                                    Pending Approvals
                                    <span id="pending-requests-badge" class="badge badge-info right"><%= (typeof stats !== 'undefined' && stats && stats.pendingRequests) ? stats.pendingRequests : 0 %></span>
                                </p>
                            </a>
                        </li>
                        <% } %>

                        <% if (activeUser && (activeUser.role === 'System Administrator' || (activeUser.role !== 'System Administrator' && typeof userPrivileges !== 'undefined' && userPrivileges.includes('view_approved_request')))) { %>
                        <li class="nav-item">
                            <a href="/approved-requests" class="nav-link <%= path === '/approved-requests' ? 'active' : '' %>">
                                <i class="nav-icon fas fa-check-circle"></i>
                                <p>
                                    Approved Requests
                                    <span class="badge badge-success right"><%= (typeof stats !== 'undefined' && stats && stats.approvedRequests) ? stats.approvedRequests : 0 %></span>
                                </p>
                            </a>
                        </li>
                        <% } %>

                        <% if (activeUser && (activeUser.role === 'System Administrator' || (typeof userPrivileges !== 'undefined' && userPrivileges.includes('view_rejected_requests')))) { %>
                        <li class="nav-item">
                            <a href="/rejected-requests" class="nav-link <%= path === '/rejected-requests' ? 'active' : '' %>">
                                <i class="nav-icon fas fa-times-circle"></i>
                                <p>
                                    Rejected Requests
                                    <span class="badge badge-danger right"><%= (typeof stats !== 'undefined' && stats && stats.rejectedRequests) ? stats.rejectedRequests : 0 %></span>
                                </p>
                            </a>
                        </li>
                        <% } %>
                    </ul>
                </li>
                
                <!-- User Management Group -->
                <li class="nav-item has-treeview">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-users"></i>
                        <p>
                            User Management
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <% if (activeUser && (activeUser.role === 'System Administrator' || (typeof userPrivileges !== 'undefined' && userPrivileges.includes('list_active_users')))) { %>
                        <li class="nav-item">
                            <a href="/users" class="nav-link <%= path === '/users' ? 'active' : '' %>">
                                <i class="nav-icon fas fa-user-check"></i>
                                <p>
                                    Active Users
                                    <span id="total-users-badge" class="badge badge-info right"><%= (typeof stats !== 'undefined' && stats && stats.totalUsers) ? stats.totalUsers : 0 %></span>
                                </p>
                            </a>
                        </li>
                        <% } %>
                        
                        <% if (activeUser && (activeUser.role === 'System Administrator' || (typeof userPrivileges !== 'undefined' && userPrivileges.includes('add_users')))) { %>
                        <li class="nav-item">
                            <a href="/add-user" class="nav-link <%= path === '/add-user' ? 'active' : '' %>">
                                <i class="nav-icon fas fa-user-plus"></i>
                                <p>Add User</p>
                            </a>
                        </li>
                        <% } %>
                        
                        <% if (activeUser && (activeUser.role === 'System Administrator' || (typeof userPrivileges !== 'undefined' && userPrivileges.includes('list_revoked_users')))) { %>
                        <li class="nav-item">
                            <a href="/revoked-users" class="nav-link <%= path === '/revoked-users' ? 'active' : '' %>">
                                <i class="nav-icon fas fa-user-slash"></i>
                                <p>
                                    Revoked Users
                                    <span id="revoked-users-badge" class="badge badge-danger right"><%= (typeof stats !== 'undefined' && stats && stats.revokedUsers) ? stats.revokedUsers : 0 %></span>
                                </p>
                            </a>
                        </li>
                        <% } %>
                    </ul>
                </li>
                
                <li class="nav-item">
                    <a href="/reports" class="nav-link <%= path === '/reports' ? 'active' : '' %>">
                        <i class="nav-icon fas fa-chart-bar"></i>
                        <p>Reports</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/settings" class="nav-link <%= path === '/settings' ? 'active' : '' %>">
                        <i class="nav-icon fas fa-cog"></i>
                        <p>Settings</p>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside> 